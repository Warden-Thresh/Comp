<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/like_it_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="我的位置"
                        android:textColor="@color/dialogplus_black_overlay"
                        android:textSize="19sp" />
                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center"
                        android:src="@drawable/arrow_right" />
                    <TextView
                        android:id="@+id/order_aim"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="终点"
                        android:maxLines="2"
                        android:textColor="@color/dialogplus_black_overlay"
                        android:textSize="19sp" />
                </LinearLayout>

                <com.baidu.mapapi.map.TextureMapView
                    android:id="@+id/order_preview_map"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"></com.baidu.mapapi.map.TextureMapView>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/margin">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="e公交"
                        android:textColor="@color/dialogplus_black_overlay"
                        android:textSize="20sp" />


                    <Button
                        android:id="@+id/line_reset_button"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:background="#ffff"
                        android:text="重新设置"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/button_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">



                    <EditText
                        android:id="@+id/editText2"
                        android:layout_width="89dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="date"
                        android:text="2017-5-2"/>

                    <EditText
                        android:paddingLeft="10dp"
                        android:id="@+id/editText"
                        android:layout_width="97dp"
                        android:layout_height="wrap_content"
                        android:gravity=""
                        android:ems="10"
                        android:inputType="time"
                        android:text="8:50"
                        android:layout_weight="0.78" />
                    <Button
                        android:id="@+id/date_reset_button"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:background="#ffff"
                        android:text="重新设置"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/button_text_size"
                        android:layout_weight="0.12" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/cancel_button"
                        android:layout_width="68dp"
                        android:layout_height="38dp"
                        android:layout_weight="0.5"
                        android:background="#ffff"
                        android:gravity="center"
                        android:text="取消"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/button_text_size" />
                    <Button
                        android:id="@+id/comfirm_button"
                        android:layout_width="68dp"
                        android:layout_height="38dp"
                        android:layout_weight="0.5"
                        android:background="#ffff"
                        android:gravity="center"
                        android:text="确认"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/button_text_size" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="4dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>

