<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="?actionBarSize"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/like_it_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="我的位置"
                        android:textColor="@color/dialogplus_black_overlay"
                        android:textSize="19sp" />
                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center"
                        android:src="@drawable/arrow_right" />
                    <TextView
                        android:id="@+id/order_aim"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="虹桥机场"
                        android:maxLines="2"
                        android:textColor="@color/dialogplus_black_overlay"
                        android:textSize="19sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/order_preview_map"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/designlinemap"></ImageView>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/margin">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="e公交定制线路"
                        android:textColor="@color/dialogplus_black_overlay"
                        android:textSize="20sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">



                    <EditText
                        android:id="@+id/editText2"
                        android:layout_width="89dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="date"
                        android:text="2017-5-2"/>

                    <EditText
                        android:paddingLeft="10dp"
                        android:id="@+id/editText"
                        android:layout_width="97dp"
                        android:layout_height="wrap_content"
                        android:gravity=""
                        android:ems="10"
                        android:inputType="time"
                        android:text="8:50"
                        android:layout_weight="0.78" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_weight="0.24"
                        android:weightSum="1">
                        <ImageView
                            android:src="@drawable/alipay"
                            android:layout_width="68dp"
                            android:layout_height="38dp"
                            android:layout_weight="0.5"
                            android:background="#ffff"
                            android:scaleType="fitStart"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/button_text_size"
                            />
                        <ImageView
                            android:src="@drawable/wechatpay"
                            android:layout_width="68dp"
                            android:layout_height="38dp"
                            android:layout_weight="0.5"
                            android:background="#ffff"

                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/button_text_size"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        android:weightSum="1">

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" >

                            <RadioButton
                                android:id="@+id/radioButton3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="支付宝支付" />

                            <RadioButton
                                android:id="@+id/radioButton2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="微信支付" />
                        </RadioGroup>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/cancel_button"
                        android:layout_width="68dp"
                        android:layout_height="38dp"
                        android:layout_weight="0.5"
                        android:background="#ffff"
                        android:gravity="center"
                        android:text="取消"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/button_text_size" />
                    <Button
                        android:id="@+id/comfirm_button"
                        android:layout_width="68dp"
                        android:layout_height="38dp"
                        android:layout_weight="0.5"
                        android:background="#ffff"
                        android:gravity="center"
                        android:text="确认支付"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/button_text_size" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>

