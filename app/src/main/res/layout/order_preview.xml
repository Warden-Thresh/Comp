<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:layout_marginTop="1dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="4dp">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="@dimen/activity_horizontal_margin"
      >
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:gravity="center_horizontal"
        android:text="请选择座位"
        android:textColor="#454545"
        android:textSize="@dimen/header_text_size"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        >

      <TextView
          android:id="@+id/like_it_button"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="我的位置"
          android:gravity="center"
          android:textColor="@color/dialogplus_black_overlay"
          android:textSize="25sp"
          android:layout_gravity="center"
          />
      <ImageView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:src="@drawable/ic_arrow_forward_grey_100_36dp"
          android:layout_gravity="center"/>
      <TextView
          android:id="@+id/order_aim"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="未知"
          android:gravity="center"
          android:textColor="@color/dialogplus_black_overlay"
          android:textSize="25sp"
          android:layout_gravity="center"
          />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/busset"/>
    <com.baidu.mapapi.map.TextureMapView
        android:id="@+id/order_preview_map"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="gone">
    </com.baidu.mapapi.map.TextureMapView>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/margin"
        android:paddingBottom="@dimen/margin">

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="e公交"
          android:textColor="@color/dialogplus_black_overlay"
          android:textSize="20sp"/>

      <Button
          android:id="@+id/footer_close_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="取消"
          android:textColor="@color/colorAccent"
          android:textSize="@dimen/button_text_size"
          android:background="#ffff"/>

      <Button
          android:id="@+id/footer_confirm_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="确认"
          android:textColor="@color/colorAccent"
          android:textSize="@dimen/button_text_size"
          android:background="#ffff"/>

    </LinearLayout>
  </LinearLayout>
</android.support.v7.widget.CardView>


